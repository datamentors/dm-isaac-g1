# ============================================
# DM-ISAAC-G1 Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Git / GitHub (for workstation sync)
# ============================================
# GitHub Personal Access Token (PAT) with repo scope
# Required on workstation for git pull/push
GITHUB_TOKEN=ghp_xxxxx

# ============================================
# Blackwell Workstation SSH credentials
# ============================================
WORKSTATION_HOST=192.168.1.205
WORKSTATION_IP=192.168.1.205
WORKSTATION_USER=datamentors
WORKSTATION_PASSWORD=your-password
WORKSTATION_SSH_PORT=22

# ============================================
# Spark Inference Server
# ============================================
SPARK_HOST=192.168.1.237
SPARK_USER=datamentors
SPARK_PASSWORD=your-password

# ============================================
# GROOT Inference Server
# ============================================
GROOT_SERVER_HOST=192.168.1.237
GROOT_SERVER_PORT=5555

# ============================================
# HuggingFace
# ============================================
HF_TOKEN=hf_xxxxx

# GR00T model configuration
GROOT_MODEL_PATH=nvidia/GR00T-N1.6-3B

# Isaac Sim/Lab Configuration
ISAAC_SIM_PATH=/isaac-sim
ISAAC_LAB_PATH=/isaac-lab
NUCLEUS_SERVER=localhost

# Training Configuration
NUM_ENVS=4096
SEED=42

# Phase flags (enable/disable features)
ENABLE_INFERENCE=true
ENABLE_RL_TRAINING=false
ENABLE_FINETUNING=false
ENABLE_NAVIGATION=false

# Logging & Monitoring
WANDB_API_KEY=your-wandb-key
WANDB_PROJECT=dm-isaac-g1
TENSORBOARD_PORT=6006

# Docker Configuration
DISPLAY=:0
